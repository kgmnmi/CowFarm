<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/cowhaikei">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:id="@+id/button_cow"
        android:src="@drawable/eto02_ushi"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button_feed"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/onigiri_ume"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button_toilet"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/toilet_kirei"
        android:scaleType="fitXY" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button_shopping"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kaimono_kago_full"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eaten_feed"
        android:src="@drawable/onigiri_ume"
        android:layout_alignBottom="@+id/button_cow"
        android:layout_alignTop="@+id/button_cow"
        android:layout_toStartOf="@+id/button_cow" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flushed_toilet"
        android:src="@drawable/unchi_character"
        android:layout_alignBottom="@+id/button_cow"
        android:layout_toEndOf="@+id/button_cow" />

</RelativeLayout>
